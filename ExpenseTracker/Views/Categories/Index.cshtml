@model IEnumerable<ExpenseTracker.Models.Category>


@{
    ViewData["PageTitle"] = "Categories";
    ViewData["PageActionUrl"] = "/Categories/AddorEdit";
    ViewData["PageActionText"] = "+ New Category";
    ViewData["CurrentController"] = "Categories";
}

<div class="row">
    <div class="col-md-7">
 <ejs-grid id="Grid" dataSource="@Model" gridLines="None" allowPaging="true" allowSorting="true">
     <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>

    <e-grid-columns>
                <e-grid-column headerText="Category" field="CategoryandIcon"></e-grid-column>
                <e-grid-column headerText="Type" field="Type" template="#typecheck"></e-grid-column>
                <e-grid-column field="Actions" template="#templateedit" ></e-grid-column>
       
    </e-grid-columns>

</ejs-grid>
    </div>
    <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center">
            <i class="fa-brands fa-windows"></i>
            </div>
</div>
</div>
<script id="typecheck" type="text/x-template">
    ${if(Type=="Income")}
    <span class="badge bg-success">${Type}</span>
    ${else}
    <span class="badge bg-danger">${Type}</span>
    ${/if}
    
</script>
<script id="templateedit" type="text/x-template">
    <div class="d-flex flex-row justify-content-start">
        <a class="btn btn-sm no-a-decoration" href="/Categories/AddorEdit/${CategoryId}">
        <i class="fa fa-pen fa-lg"></i>
        </a>
        <form action="/Categories/Delete/${CategoryId}" method="post">
            @Html.AntiForgeryToken()
        <button class="btn btn-sm no-a-decoration bg-danger" href="/Categories/Delete/${CategoryId}" onclick="return confirm(&quot Are you sure to delete this?&quot;)">
            <i class="fa fa-trash-can fa-lg"></i>
            </button>
            </form>
        </div>
</script>
